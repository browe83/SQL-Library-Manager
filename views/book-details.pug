doctype html
head
  title=book.title
  link(rel='stylesheet', href='/static/stylesheets/style.css')
h1 Book Details
form(method='get', action=`/books/${book.id}/update`)
  p
    label(for='title') Title
    input#title(name='title', type='text', value=`${book.title}` disabled)
  p
    label(for='author') Author
    input#author(name='author', type='text', value=`${book.author}` disabled)
  p
    label(for='genre') Genre
    input#genre(name='genre', type='text', value=`${book.genre}` disabled)
  p
    label(for='year') Year
    input#year(name='year', type='text', value=`${book.year}` disabled)
  p
    input(type='submit', value='Update Book')
  p
    a.button(href='/books/') Cancel